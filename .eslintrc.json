{
  "extends": [
    "next/core-web-vitals", 
    "prettier"
  ],
  "ignorePatterns": ["**/public/*.js"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "react/no-unescaped-entities": "off",
    "@next/next/no-img-element": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "@typescript-eslint/no-empty-function": "off"
  }
}